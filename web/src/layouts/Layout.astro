---
interface Props {
  title: string;
}

const { title = 'Awesome Stars' } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A curated collection of my starred repositories" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Awesome Stars</title>
  </head>
  <body>
    <slot />
  </body>
</html>
