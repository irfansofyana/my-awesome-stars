---
import Layout from '../layouts/Layout.astro';
import { parseMarkdownFiles } from '../lib/markdown-parser';
import RepoGrid from '../components/RepoGrid.astro';
import FilterPanel from '../components/FilterPanel.astro';
import SearchBar from '../components/SearchBar.astro';

const { repos, languages, topics } = await parseMarkdownFiles();

const uniqueLanguages = languages.map(l => l.name);
const uniqueTopics = topics.map(t => t.name);

const buildTimestamp = new Date(import.meta.env.BUILD_TIMESTAMP || new Date().toISOString());
const formattedTimestamp = buildTimestamp.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  timeZoneName: 'short'
});
---

<Layout title="My Awesome Stars">
  <div class="container">
    <header class="header">
      <h1>My Awesome Stars</h1>
      <p>A curated collection of my starred repositories</p>
      <div class="stats">
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
          </svg>
          {repos.length} repositories
        </span>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294l4-13zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0zm6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0z"/>
          </svg>
          {uniqueLanguages.length} languages
        </span>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
          </svg>
          {uniqueTopics.length} topics
        </span>
        <span class="last-updated">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 8 1a7 7 0 0 1 7 7z"/>
          </svg>
          Last updated: {formattedTimestamp}
        </span>
      </div>
    </header>

    <SearchBar />

    <div class="content-wrapper">
      <aside class="sidebar">
        <FilterPanel
          languages={uniqueLanguages}
          topics={uniqueTopics}
        />
      </aside>

      <main class="main-content">
        <RepoGrid repos={repos} />
      </main>
    </div>
  </div>
</Layout>

<style>
  .content-wrapper {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .sidebar {
    position: sticky;
    top: 1rem;
    width: 250px;
    flex-shrink: 0;
  }

  .main-content {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 1024px) {
    .content-wrapper {
      flex-direction: column;
    }

    .sidebar {
      position: static;
      width: 100%;
    }
  }
</style>
